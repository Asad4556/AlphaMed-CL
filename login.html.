<script src="https://cdnjs.cloudflare.com/ajax/libs/qrious/4.0.2/qrious.min.js"></script>
<script>
function generateReport() {
  const name = document.getElementById('name').value;
  const guardian = document.getElementById('guardian').value;
  const sample = document.getElementById('sample').value;
  const cnic = document.getElementById('cnic').value;
  const age = document.getElementById('age').value;
  const contact = document.getElementById('contact').value;
  const testDetails = document.getElementById('testDetails').value;
  const departments = Array.from(document.querySelectorAll('.departments input:checked')).map(el => el.value).join(', ');

  const mrn = 'MRN-' + Math.floor(100000 + Math.random() * 900000);

  const reportData = `MRN: ${mrn}\nName: ${name}\nFather/Son/W/O: ${guardian}\nSample #: ${sample}\nCNIC: ${cnic}\nAge: ${age}\nContact: ${contact}\nDepartments: ${departments}\nTests: ${testDetails}`;

  document.getElementById('reportContent').innerText = reportData;
  document.getElementById('reportOutput').style.display = 'block';

  const qr = new QRious({
    element: document.getElementById('qrCode'),
    value: reportData,
    size: 100,
  });
}
</script>

